{
  "name": "@projects/vibeverse-3d-experience-server",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "npx ts-node -r dotenv/config src/server.ts",
    "build": "cd ../../.. && npm run build -w @projects/vibeverse-3d-experience-client && cd projects/vibeverse-3d-experience/server && tsc -p tsconfig.json && cp -r src/templates dist/ && cp -r ../client/build dist/client/",
    "vercel-build": "cd ../client && npm install && npm run build && cd ../server && npm install && tsc -p tsconfig.json && cp -r src/templates dist/ && cp -r ../client/build dist/client/",
    "start": "node -r dotenv/config dist/server.js",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.19.2",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "express-session": "^1.17.3",
    "mustache": "^4.2.0",
    "connect-pg-simple": "^9.0.1",
    "dotenv": "^16.3.1",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.11.25",
    "@types/supertest": "^2.0.16",
    "@types/pg": "^8.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express-session": "^1.17.10",
    "@types/mustache": "^4.2.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
